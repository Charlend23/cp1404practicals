BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation:'horizontal'
        TextInput:
            id: input_miles
            text: '34'
            font_size: 50
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.25
            Button:
                text: 'Up'
                on_press: app.handle_number(1)
            Button:
                text: 'Down'
                on_press: app.handle.number(0)
    Button:
        text: 'Convert miles to km'
        on_press: app.handle_calculation()
    Label:
        id: output_label
        text: '54.71756'
        color: (1, 1, 0, 1)
        font_size: 75